<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.activities.WordDetailActivity">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp">

        <TextView
                android:id="@+id/tv_lang_from"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        <EditText
                android:id="@+id/et_trans_from"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_below="@+id/tv_lang_from"
                android:inputType="text"
                android:background="@null"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_lang_from"/>

        <ImageButton
                android:id="@+id/btn_change_trans_from"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_edit"
                android:background="@null"
                android:onClick="action"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/et_trans_from"
                app:layout_constraintTop_toTopOf="@+id/et_trans_from"/>

        <TextView
                android:id="@+id/tv_lang_to"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_trans_from"/>

        <EditText
                android:id="@+id/et_trans_to"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_below="@+id/tv_lang_from"
                android:inputType="text"
                android:background="@null"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_lang_to"
                app:layout_constraintStart_toStartOf="parent"/>

        <ImageButton
                android:id="@+id/btn_change_trans_to"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_edit"
                android:background="@null"
                android:onClick="action"
                app:layout_constraintTop_toTopOf="@+id/et_trans_to"
                app:layout_constraintBottom_toBottomOf="@+id/et_trans_to"
                app:layout_constraintEnd_toEndOf="parent"/>

        <ImageButton
                android:id="@+id/btn_return"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_reject"
                android:background="@null"
                android:onClick="action"
                app:layout_constraintTop_toBottomOf="@+id/et_trans_to"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_save"
                app:layout_constraintHorizontal_chainStyle="packed"/>

        <ImageButton
                android:id="@+id/btn_save"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_approve"
                android:background="@null"
                android:onClick="action"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_return"
                app:layout_constraintBottom_toBottomOf="@+id/btn_return"/>

    </android.support.constraint.ConstraintLayout>

</LinearLayout>